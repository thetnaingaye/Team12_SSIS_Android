<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="sg.edu.nus.iss.team12.ssis.team12_ssis.InventoryDetailActivity">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="256dp"
            android:layout_height="202dp"
            android:layout_marginTop="88dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.651"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_ItemCode"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:paddingBottom="2dp"
                    android:text="Item Code :"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />

                <TextView
                    android:id="@+id/textView_ItemCode_Value"
                    android:layout_width="183dp"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:text="C007"

                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_Category"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:paddingBottom="3dp"
                    android:text="Category :"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />

                <TextView
                    android:id="@+id/textView_Category_Value"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:text="Visual Aid"

                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_ReorderLevel"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:paddingBottom="3dp"
                    android:text="Re-Order Level :"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />

                <TextView
                    android:id="@+id/textView_ReorderLevel_Value"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:text="800"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_ReorderQty"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:paddingBottom="3dp"
                    android:text="Re-Order Quantity :"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />

                <TextView
                    android:id="@+id/textView_ReorderQty_Value"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:text="500"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_MeasurementUnit"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:paddingBottom="3dp"
                    android:text="Measurement Unit :"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />

                <TextView
                    android:id="@+id/textView_MeasurementUnit_Value"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:text="pc"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_Location"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:paddingBottom="3dp"
                    android:text="Location :"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />

                <TextView
                    android:id="@+id/textView_Location_Value"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:text="H-1"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_QtyInStock"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:paddingBottom="3dp"
                    android:text="Units In Stock :"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />

                <TextView
                    android:id="@+id/textView_QtyInStock_Value"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:text="12"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_QtyToTake"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:paddingBottom="3dp"
                    android:text="Units To Retrieve :"
                    android:textColor="@android:color/holo_blue_dark"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />

                <TextView
                    android:id="@+id/textView_QtyToTake_Value"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:text="12"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="154dp" />
            </TableRow>
        </TableLayout>


        <ImageView
            android:id="@+id/imageView_Title"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/brandimg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_Description_Value"
            android:layout_width="253dp"
            android:layout_height="61dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="ChalkBoard Eraser"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView_Title"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton_shelf"
            android:layout_width="380dp"
            android:layout_height="271dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <Button
            android:id="@+id/button_Allocate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALLOCATE"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_shelf" />

        <Button
            android:id="@+id/button_StockCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="8dp"
            android:text="STOCK CARD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_Allocate"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_shelf" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
