<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_RequestorName_Value"
        android:layout_width="147dp"
        android:layout_height="32dp"
        android:layout_marginStart="44dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_RequestDate_Value"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_RequestorName_Value"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_Status_Value"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="Status"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_RequestDate_Value"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>